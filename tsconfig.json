{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",                        /* Redirect output structure to the directory. */
    "rootDir": "pricing-plan/src", 
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["pricing-plan/src"],
  "exclude": ["pricing-plan/src/**/*.spec.ts", "pricing-plan/src/**/*.test.ts"] // incase unit tests
}